<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_user"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:padding="@dimen/standard_padding"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        style="@style/Title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_padding"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Title:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_user"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_created_date_text"
        style="@style/Text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_padding"
        android:text="Created Date:"
        app:layout_constraintStart_toStartOf="@+id/tv_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <TextView
        android:id="@+id/tv_created_date"
        style="@style/Text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_padding"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="18-10-22"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="@+id/tv_created_date_text"
        app:layout_constraintTop_toBottomOf="@+id/tv_created_date_text" />

    <TextView
        android:id="@id/tv_closed_date_text"
        style="@style/Text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_padding"
        android:text="Closed Date:"
        app:layout_constraintStart_toStartOf="@+id/tv_created_date"
        app:layout_constraintTop_toBottomOf="@+id/tv_created_date" />

    <TextView
        android:id="@+id/tv_closed_date"
        style="@style/Text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_padding"
        android:maxLines="1"
        android:text="18-10-22"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="@+id/tv_closed_date_text"
        app:layout_constraintTop_toBottomOf="@+id/tv_closed_date_text" />

    <TextView
        android:id="@+id/tv_username_text"
        style="@style/Text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_padding"
        android:text="Username:"
        app:layout_constraintStart_toStartOf="@+id/tv_closed_date"
        app:layout_constraintTop_toBottomOf="@+id/tv_closed_date" />

    <TextView
        android:id="@+id/tv_user_text"
        style="@style/Text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_padding"
        android:text="by Gaurav"
        android:textStyle="bold|italic"
        android:paddingBottom="@dimen/standard_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_username_text"
        app:layout_constraintTop_toBottomOf="@+id/tv_username_text" />


</androidx.constraintlayout.widget.ConstraintLayout>